BASEPATH      = @basepath@
NOTHERMAL     = @nothermal@
NODEFO        = @nodefo@
NOASSEMBLY    = @noassembly@
USEFAKEDEVICES= @usefakedevices@
QMAKE         = @qmake@

subdirs	      = devices external tools common common_test
ifeq ($(NOTHERMAL),0)
subdirs      += thermo
endif
ifeq ($(NODEFO),0)
subdirs      += defo
endif
ifeq ($(NOASSEMBLY),0)
subdirs      += assembly
endif

qtsubdirs     = common common_test
ifeq ($(NOTHERMAL),0)
qtsubdirs    += thermo/thermoDAQ thermo/microDAQ thermo/thermoDAQ2Root thermo/thermoDisplay thermo/microDisplay thermo/thermoDAQ2Log
endif
ifeq ($(NODEFO),0)
qtsubdirs    += defo/defoCommon defo/defoDAQ defo/defoReco defo/defoCalib defo/defoDAQ2Root
endif
ifeq ($(NOASSEMBLY),0)
qtsubdirs    += assembly/assemblyCommon assembly/vision/circleCalibration assembly/assembly
endif


all: qt
	@for dir in $(subdirs); do (cd $$dir; make); done

qt:
	@for dir in $(qtsubdirs); do (cd $$dir; @qmake@); done

Makefile: Makefile.in @basepath@/config.status
	@basepath@/config.status Makefile.in

tkmodlabenv.sh: tkmodlabenv.sh.in @basepath@/config.status
	@basepath@/config.status tkmodlabenv.sh.in

tkmodlabenv.csh: tkmodlabenv.csh.in @basepath@/config.status
	@basepath@/config.status tkmodlabenv.csh.in

clean:
	@rm -f *~
	@for dir in $(subdirs); do (cd $$dir; make clean); done
	@rm -f tkmodlabenv.sh
	@rm -f tkmodlabenv.csh
