LIBDIR        = ../lib

LIB           = TkModLabHuber

USEFAKEDEVICES=@usefakedevices@

MODULES       = PetiteFleurComHandler \
                VHuberPetiteFleur \
                HuberPetiteFleurFake \
                HuberPetiteFleur

CC            = gcc
CXX           = g++
CXXFLAGS      = -fPIC
LD            = g++
SOFLAGS       = @soflags@

ifeq ($(USEFAKEDEVICES),1)
CXXFLAGS     += -DUSE_FAKEIO
endif

ALLDEPEND = $(addsuffix .d,$(MODULES))

EXISTDEPEND = $(shell find . -name \*.d -type f -print)

all: depend lib

depend: $(ALLDEPEND)

lib: $(LIBDIR)/lib$(LIB).so

$(LIBDIR)/lib$(LIB).so: $(addsuffix .o,$(MODULES)) test.cc
	@(test -e $(LIBDIR) || mkdir $(LIBDIR))
	@echo "Linking shared library $@"
	$(LD) $(SOFLAGS) $^ -o $@
	g++ -c test.cc
	g++ -o test *.o

%.d: %.cpp
	@echo Making dependency for file $< ...
	@set -e;\
	$(CXX) -M $(CPPFLAGS) $(CXXFLAGS)  $< |\
	sed 's!$*\.o!& $@!' >$@;\
	[ -s $@ ] || rm -f $@

%.o: %.cpp
	@echo "Compiling $<"
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

clean:
	@rm -f $(LIBDIR)/lib$(LIB).so
	@rm -f $(addsuffix .o,$(MODULES))
	@rm -f *.d
	@rm -f *~

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
ifneq ($(EXISTDEPEND),)
-include $(EXISTDEPEND)
endif
endif
