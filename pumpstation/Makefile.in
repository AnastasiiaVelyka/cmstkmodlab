BASEPATH      = @basepath@
NOTHERMAL     = @nothermal@
NODEFO        = @nodefo@
NOPUMPSTATION = @nopumpstation@

USEFAKEDEVICES= @usefakedevices@

subdirs	      = daemon controller app

all:
	@for dir in $(subdirs); do (cd $$dir; make); done

clean:
	@rm -f *~
	@for dir in $(subdirs); do (cd $$dir; make clean); done
	@rm -rf lib
