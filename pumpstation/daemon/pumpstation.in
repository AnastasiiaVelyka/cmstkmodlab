# with your own name if you copy and modify this script.

DESC="Description of the service"
NAME=psd
DAEMON=/usr/bin/PumpStationDaemon
PIDFILE=/home/pi/cmstkmodlab/pumpstation/daemon/psd.pid

do_start () {
	log_daemon_msg "Starting pump station daemon" "psd"
	start-stop-daemon --start --quiet --oknodo --background --chuid pi --group pi --make-pidfile --pidfile $PIDFILE --startas $DAEMON
	log_end_msg $?
}

do_stop () {
	log_daemon_msg "Stopping pump station daemon" "psd"
	start-stop-daemon --stop --quiet --oknodo --chuid pi --group pi --pidfile $PIDFILE
	log_end_msg $?
	rm -f $PIDFILE
}
