BASEPATH      = @basepath@
NOTHERMAL     = @nothermal@
NODEFO        = @nodefo@
USEFAKEDEVICES= @usefakedevices@

subdirs	      = thermoDAQ microDAQ thermoDisplay microDisplay thermoDAQ2Root thermoDAQ2Log

all:
	@for dir in $(subdirs); do (cd $$dir; make); done

clean:
	@rm -f *~
	@for dir in $(subdirs); do (cd $$dir; make clean); done
	@rm -rf lib
