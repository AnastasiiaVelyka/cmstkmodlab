BASEPATH      = @basepath@
NOTHERMAL     = @nothermal@
NODEFO        = @nodefo@
USEFAKEDEVICES= @usefakedevices@

subdirs	      = thermoDAQ thermoDAQ2 microDAQ thermoDisplay thermoDisplay2 microDisplay thermoDAQ2Root thermoDAQ2Log thermoDAQ2Plots

all:
	@for dir in $(subdirs); do (cd $$dir; make); done

clean:
	@rm -f *~
	@for dir in $(subdirs); do (cd $$dir; make clean); done
	@rm -rf lib
